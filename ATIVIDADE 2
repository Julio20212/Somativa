package AVSomativa;

import java.util.Scanner;

public class Ativsomativa2 {//Nome da classe

	public static void main(String[] args) {//Permite que o código seja executado de diversas formas
	Scanner ler = new Scanner(System.in);//Scanner lê e armazena
	double area, h, b;//Declarando as variáveis
	
	System.out.print("Informe a altura do triângulo: ");//Usuário informa a altura
	h = ler.nextDouble();//Será guardado na variável h
	
	System.out.print("Informe a base do triângulo: ");//Usuário informa a base
	b = ler.nextDouble();//Será guardado na variável b
	
	area = (b*h)/2;//Calculando a área do triângulo
	
	System.out.println("A área do triângulo é: "+ area);//Informa o resultado da área
	}

}
